	~gr2 = Array.newClear(4);
	~grg = Group.new(s);
	0.01.wait;
	Routine { 4.do({ arg i;
		~gr2[i] = BusGrainer.new(s, ~savebuf_7, s, 0);
		6.125.wait;
		~gr2[i].grtrig_s.set(\hz, 6 + (i * 2));
		~gr2[i].grdur_b.set(4.0 / (6 + (i * 2)));
		~gr2[i].grpos_s.set(\hz, 1 / (i + 4) * 1.0 / ~savebuf_7.duration);
		~gr2[i].gr_s.set(\amp, -36.dbamp);
		(8.0 + i).wait;
	}); }.play;
